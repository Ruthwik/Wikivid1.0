            </StackPanel>-->
        </Grid>

        
        <ListView x:Name="lw" Margin="5,5,5,25" ItemsSource="{Binding Path=_SubContent}" Background="Wheat" Grid.Column="1" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding heading}" FontSize="30" />
                        <TextBlock Text="{Binding text}" FontSize="15" />
                        <TextBlock Text="{Binding youtubePath}" />
                        <WebView x:ConnectionId='1' Source="{Binding youtubePath}" Tag="{Binding youtubePath}" DefaultBackgroundColor="Black" Width="640" Height="390"                          /> 
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
       <!-- <WebView x:Name="MyWebview" Grid.Column="1" DefaultBackgroundColor="Black" Width="640" Height="390"/> -->
    </Grid>







