    <Grid Background="WhiteSmoke">

        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*"  />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FFECECEC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1000" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" x:Name="backButton" Grid.Row="0"  Margin="41,53,0,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button" RenderTransformOrigin="1.341,0.317" Background="#FF080808" Foreground="Black" BorderBrush="Black"/>
            <Image Grid.Column="1" HorizontalAlignment="Left" Margin="82,0,0,0" VerticalAlignment="Top" Width="298" Source="ms-appx:///Assets/SplashScreen.png"/>
            <SearchBox x:ConnectionId='6'  x:Name="SearchBoxSuggestions" Grid.Column="2"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="37" Width="233"                                                                                                                                                                                      />
        </Grid>

        <ListView SelectionMode="None" x:Name="lw" ItemsSource="{Binding Path=di,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Background="White" VerticalAlignment="Stretch" Height="Auto"  Grid.Row="1" Margin="40,0,40,0" >

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical" Grid.Column="0">
                            <TextBlock x:ConnectionId='2' Tag="1" Text="{Binding Title}" FontSize="30" Foreground="Black"                                                   />
                            <TextBlock x:ConnectionId='3' Tag="2" Text="{Binding Text}" FontSize="15" Foreground="Black" TextWrapping="WrapWholeWords" MaxLines="15"                           />
                            <TextBox x:ConnectionId='4' Tag="1" Text="{Binding Link1}" FontSize="1" Foreground="Black"                                   IsEnabled="False" />
                            <Button x:ConnectionId='5' Content="Read More"                      Height="30" Width="100" Background="Black"/>
                        </StackPanel>
                        <WebView x:ConnectionId='1' HorizontalAlignment="Right" VerticalAlignment="Top" Tag="{Binding Link1}" DefaultBackgroundColor="Black" Width="640" Height="390"                                                  Grid.Column="1" />

                    </Grid> 
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Vertical"  Grid.Row="1">
            <ProgressRing IsActive="True"  Name="ProgressRing"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="90" Margin="0,20,0,20"  Width="90" Foreground="#FF682CF3"></ProgressRing>
            <TextBlock Name="ProgressText" Text="This may take up to 40 seconds" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="25" Foreground="Black"></TextBlock>
        </StackPanel>

    </Grid>
</Page>

